
<div class="box">
<form action="/places/listings" method="POST">
  Available on: <input type="date" name="start_availability">
  <input type="submit" value="Show Places">
</form>
<form action="/places/listings" method="get">
  <input type="submit" value="Show All">
</form>
</div>


<% @places.each do |place| %>

  <div class="box">
    <h2 class="place_name"><%= place.name %></h2>
    <p class="price">Â£<%= place.price %> per night</p>
    <p class="description"><%= place.description %></p>
    <p class="availability">Available from: <%= place.start_availability %> to: <%= place.end_availability %></p>
    <form action="/places/<%=place.id%>" method="get">
      <input type="submit" value="Book">
    </form>
  </div>
<% end %>
